PORTB	= $D301
NMIEN	= $D40E
DLIST	= $D402
NMIVEC	= $FFFA
COUNTER	= $00
VBIVEC	= DATAORIGIN+$000D
VDSLST	= DATAORIGIN+$000F
OFFRTI	= DATAORIGIN+$0011
@exit

@halt	ldx #$00
	txs
	.ifdef MAIN.@DEFINES.ROMOFF
	inc portb
	.endif

	ldy #$01

	rts


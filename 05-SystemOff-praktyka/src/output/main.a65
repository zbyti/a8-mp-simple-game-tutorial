.endl							; UNIT SYSTEM

.local	NMI						; PROCEDURE | ASSEMBLER | INTERRUPT

; ---------------------  ASM Block 049  ---------------------


      bit NMIST \ bpl vbi   ; check kind of interrupt
      jmp off               ; VDSLST
vbi:  inc RTCLOK+2
      jmp off               ; VBIVEC
off:

	rti						; ret
.endl

.local	VBI						; PROCEDURE | INTERRUPT

; ---------------------  ASM Block 050  ---------------------

 phr 

; optimize FAIL (0, main.pas), line = 28

	inc COUNTER

; ---------------------  ASM Block 051  ---------------------

 plr 
	rti						; ret
.endl

.local	SYSTEMOFF					; PROCEDURE

; ---------------------  ASM Block 052  ---------------------

 sei 

; optimize OK (main.pas), line = 35

	lda <NMI
	add #$06
	sta VDSLST
	lda >NMI
	adc #$00
	sta VDSLST+1

; optimize OK (main.pas), line = 36

	lda <NMI
	add #$0B
	sta VBIVEC
	lda >NMI
	adc #$00
	sta VBIVEC+1

; optimize OK (main.pas), line = 37

	lda <NMI
	add #$0D
	sta OFFRTI
	lda >NMI
	adc #$00
	sta OFFRTI+1

; optimize OK (main.pas), line = 38

	mva #$00 NMIEN
	mva #$FE PORTB
	mva <NMI NMIVEC
	mva >NMI NMIVEC+1
	mva #$40 NMIEN
@exit
	.ifdef @new
	lda <@VarData
	sta :ztmp
	lda >@VarData
	ldy #@VarDataSize-1
	jmp @FreeMem
	els
	rts						; ret
	eif
.endl
l_0007

; optimize FAIL ('SYSTEMOFF', main.pas), line = 42

	jsr SYSTEMOFF

; optimize FAIL ('SYSTEM.PAUSE_0056', main.pas), line = 43

	inx
	mva #$64 :STACKORIGIN,x
	mva #$00 :STACKORIGIN+STACKWIDTH,x
	jsr SYSTEM.PAUSE_0056

; optimize OK (main.pas), line = 44

	mwy VBIVEC :bp2
	ldy #$00
	lda <VBI
	sta (:bp2),y
	iny
	lda >VBI
	sta (:bp2),y

; --- RepeatUntilProlog
l_0092

; optimize OK (main.pas), line = 45

	jmp l_0092


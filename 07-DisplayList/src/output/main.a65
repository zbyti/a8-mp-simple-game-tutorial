; ------------------------------------------------------------
@UnitInit

	rts

; ------------------------------------------------------------

GAMELMS	= $E000
adr.DL2	= CODEORIGIN+$0000
.var DL2	= adr.DL2 .word

.endl							; UNIT GR

; ------------------------------------------------------------

.local	SYS						; UNIT

.local	NMI						; PROCEDURE | ASSEMBLER | INTERRUPT

; ---------------------  ASM Block 049  ---------------------


      bit NMIST \ bpl vbi   ; check kind of interrupt
.def  :__dlijmp
      jmp __off               ; VDSLST
vbi:  inc RTCLOK+2
.def  :__vbijmp
      jmp __off               ; VBIVEC
.def  :__off

	rti						; ret
.endl

.local	SYSTEMOFF					; PROCEDURE

; optimize FAIL ('SYSTEM.PAUSE_0056', SYS), line = 62

	jsr SYSTEM.PAUSE_0056

; ---------------------  ASM Block 054  ---------------------

 sei 

; optimize OK (SYS), line = 63

	mva #$00 REGISTERS.NMIEN
	mva #$FE REGISTERS.PORTB
	mva <NMI REGISTERS.NMIVEC
	mva >NMI REGISTERS.NMIVEC+1
	mva #$40 REGISTERS.NMIEN
@exit
	.ifdef @new
	lda <@VarData
	sta :ztmp
	lda >@VarData
	ldy #@VarDataSize-1
	jmp @FreeMem
	els
	rts						; ret
	eif
.endl

; ------------------------------------------------------------
; ------------------------------------------------------------
@UnitInit

	rts

; ------------------------------------------------------------

.endl							; UNIT SYS

.local	VBI						; PROCEDURE | INTERRUPT

; ---------------------  ASM Block 055  ---------------------

 phr 

; optimize FAIL (0, main.pas), line = 12

	inc COUNTER

; ---------------------  ASM Block 056  ---------------------

 plr 
	rti						; ret
.endl
l_0007

; optimize FAIL ('SYS.SYSTEMOFF', main.pas), line = 17

	jsr SYS.SYSTEMOFF
	jsr GR.MODE2

; --- RepeatUntilProlog
l_0080

; optimize OK (main.pas), line = 18

	jmp l_0080

; ------------------------------------------------------------

COUNTER	= $00
@exit

@halt	ldx #$00
	txs
	.ifdef MAIN.@DEFINES.ROMOFF
	inc portb
	.endif

	ldy #$01

	rts

; ------------------------------------------------------------

IOCB@COPY	:16 brk


.local	REGISTERS					; UNIT

; ------------------------------------------------------------

PORTB	= $D301
SDLSTL	= $D402
NMIEN	= $D40E
DLIST	= $D402
NMIVEC	= $FFFA

.endl							; UNIT REGISTERS

; ------------------------------------------------------------

.local	GR						; UNIT

.local	MODE2						; PROCEDURE

; optimize FAIL ('SYSTEM.PAUSE_0056', GR), line = 28

	jsr SYSTEM.PAUSE_0056
	mva #$00 REGISTERS.SDLSTL
	mva #$20 REGISTERS.SDLSTL+1
@exit
	.ifdef @new
	lda <@VarData
	sta :ztmp
	lda >@VarData
	ldy #@VarDataSize-1
	jmp @FreeMem
	els
	rts						; ret
	eif
.endl

